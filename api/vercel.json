{
  "version": 2,
  "builds": [
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "pages/**/*.js",
      "use": "@vercel/static-build",
      "config": { "distDir": ".next" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "pages/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": ".next/pages/$1"
    }
  ]
}
